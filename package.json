{
  "name": "yt-video-reader",
  "version": "1.0.0",
  "description": "YouTube video processing system with AI-powered summaries",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "yt-cli": "dist/bin/yt-cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully' && chmod +x dist/bin/yt-cli.js",
    "cli": "tsx src/bin/yt-cli.ts",
    "build:cli": "npm run build && chmod +x dist/bin/yt-cli.js",
    "docker:build": "docker build -t yt-video-processor .",
    "docker:run": "docker run -p 3000:3000 --env-file .env yt-video-processor",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "validate": "npm run type-check && npm run lint && npm run test"
  },
  "keywords": [
    "youtube",
    "video",
    "processing",
    "ai",
    "transcription",
    "summarization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^7.6.0",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.0.0",
    "bullmq": "^4.0.0",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.0",
    "log-symbols": "^7.0.1",
    "openai": "^4.0.0",
    "youtube-dl-exec": "^3.0.0",
    "zod": "^3.20.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/fluent-ffmpeg": "^2.1.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
